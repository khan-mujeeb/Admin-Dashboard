<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/anti_flash_white"
    android:orientation="vertical"
    tools:context=".ui.AddBooks">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/appbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/headling_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="Choose Year"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/year_radio_grp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headling_year"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">
            <!--            <RadioButton-->
            <!--                android:layout_margin="5dp"-->
            <!--                android:background="@drawable/custom_radio_selector"-->
            <!--                android:button="@color/transparent"-->
            <!--                android:gravity="center"-->
            <!--                android:id="@+id/fe"-->
            <!--                android:textColor="@color/black"-->
            <!--                android:text="F.E"-->
            <!--                android:layout_weight="1"-->
            <!--                android:drawableTop="@drawable/baseline_travel_explore_24"-->
            <!--                android:layout_width="150dp"-->
            <!--                android:layout_height="140dp"/>-->

            <RadioButton
                android:id="@+id/se"
                android:layout_width="105dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:background="@drawable/custom_radio_selector"
                android:button="@color/transparent"

                android:drawableTop="@drawable/baseline_computer_24"
                android:gravity="center"
                android:text="S.E"
                android:textAlignment="center"
                android:textColor="@drawable/custom_radio_text"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/te"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_radio_selector"
                android:button="@color/transparent"
                android:drawableTop="@drawable/baseline_engineering_24"
                android:gravity="center"
                android:text="T.E"
                android:textAlignment="center"
                android:textColor="@drawable/custom_radio_text"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/be"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_radio_selector"
                android:button="@color/transparent"
                android:drawableTop="@drawable/baseline_travel_explore_24"
                android:gravity="center"
                android:text="B.E"
                android:textAlignment="center"
                android:textColor="@drawable/custom_radio_text"
                android:textStyle="bold" />
        </RadioGroup>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/sem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/headling_sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Choose Semester"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/semester_radio_grp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headling_sem"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
            <!--            <RadioButton-->
            <!--                android:id="@+id/one"-->
            <!--                android:textColor="@color/black"-->
            <!--                android:text="1"-->
            <!--                android:layout_weight="1"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"/>-->

            <!--            <RadioButton-->
            <!--                android:id="@+id/two"-->
            <!--                android:textColor="@color/black"-->
            <!--                android:text="2"-->
            <!--                android:layout_weight="1"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"/>-->

            <RadioButton

                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="3rd Semester"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="4th Semester"
                android:textColor="@color/black" />


            <RadioButton
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="5th Semester"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="6th Semester"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="7th Semester"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="8th Semester"
                android:textColor="@color/black" />
        </RadioGroup>
    </RelativeLayout>


    <!--    <com.google.android.material.textfield.TextInputEditText-->
    <!--        android:layout_margin="10dp"-->
    <!--        android:visibility="invisible"-->
    <!--        android:padding="10dp"-->
    <!--        android:hint="subject"-->
    <!--        android:background="@drawable/edit_text_bg"-->
    <!--        android:inputType="textAutoComplete"-->
    <!--        android:id="@+id/subject"-->
    <!--        android:maxLines="1"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"/>-->

    <LinearLayout
        android:id="@+id/subjectLayoutView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/headling_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Choose Subject"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/subject_layout"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <RadioButton

                android:id="@+id/subj_1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="subject 1"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/subj_2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="subject 2"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/subj_3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="subject 3"
                android:textColor="@color/black" />

            <RadioButton

                android:id="@+id/subj_4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="subject 4"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/subj_5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="subject 5"
                android:textColor="@color/black" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/dotted_bg"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/baseline_cloud_upload_24"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/publication"
            android:textAlignment="center"
            android:hint="Enter Publications name"
            android:background="@drawable/edit_text_bg"
            android:textColorHint="@color/hint"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="5dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/pdf_logo"
            android:id="@+id/pdf_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/new_book_pdf"
            android:textAlignment="center"
            android:textColor="@color/black" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/selected"
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:padding="5dp"
        android:text="Browse files" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/selected"
        android:padding="5dp"
        android:text="Submit" />

</LinearLayout>