<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/anti_flash_white"
    android:orientation="vertical"
    tools:context=".ui.AddBooks">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_arrow_back_24" />

        <TextView
            android:id="@+id/appbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins"
            android:text="@string/dashboard"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/headling_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:text="Choose Year"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/year_radio_grp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headling_year"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">
            <!--            <RadioButton-->
            <!--                android:layout_margin="5dp"-->
            <!--                android:background="@drawable/custom_radio_selector"-->
            <!--                android:button="@color/transparent"-->
            <!--                android:gravity="center"-->
            <!--                android:id="@+id/fe"-->
            <!--                android:textColor="@color/black"-->
            <!--                android:text="F.E"-->
            <!--                android:layout_weight="1"-->
            <!--                android:drawableTop="@drawable/baseline_travel_explore_24"-->
            <!--                android:layout_width="150dp"-->
            <!--                android:layout_height="140dp"/>-->

            <RadioButton
                android:id="@+id/se"
                android:layout_width="105dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:background="@drawable/custom_radio_selector"
                android:button="@color/transparent"
                android:drawableTop="@drawable/baseline_computer_24"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="S.E"
                android:textAlignment="center"
                android:textColor="@drawable/custom_radio_text"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/te"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_radio_selector"
                android:button="@color/transparent"
                android:drawableTop="@drawable/baseline_engineering_24"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="T.E"
                android:textAlignment="center"
                android:textColor="@drawable/custom_radio_text"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/be"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_radio_selector"
                android:button="@color/transparent"
                android:drawableTop="@drawable/baseline_travel_explore_24"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="B.E"
                android:textAlignment="center"
                android:textColor="@drawable/custom_radio_text"
                android:textStyle="bold" />
        </RadioGroup>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/sem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/headling_sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/poppins"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Choose Semester"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/semester_radio_grp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headling_sem"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <RadioButton
                android:fontFamily="@font/poppins"
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="3rd Semester"
                android:textColor="@color/black" />

            <RadioButton
                android:fontFamily="@font/poppins"
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="4th Semester"
                android:textColor="@color/black" />


            <RadioButton
                android:fontFamily="@font/poppins"
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="5th Semester"
                android:textColor="@color/black" />

            <RadioButton
                android:fontFamily="@font/poppins"
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="6th Semester"
                android:textColor="@color/black" />

            <RadioButton
                android:fontFamily="@font/poppins"
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="7th Semester"
                android:textColor="@color/black" />

            <RadioButton
                android:fontFamily="@font/poppins"
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="8th Semester"
                android:textColor="@color/black" />
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/subjectLayoutView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:fontFamily="@font/poppins"
            android:id="@+id/headling_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Choose Subject"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/subject_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <RadioButton
                android:fontFamily="@font/poppins"
                android:id="@+id/subj_1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="subject 1"
                android:textColor="@color/black" />

            <RadioButton
                android:fontFamily="@font/poppins"
                android:id="@+id/subj_2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:maxLines="1"
                android:text="subject 2"
                android:textColor="@color/black" />

            <RadioButton
                android:fontFamily="@font/poppins"
                android:id="@+id/subj_3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="subject 3"
                android:textColor="@color/black" />

            <RadioButton
                android:fontFamily="@font/poppins"
                android:id="@+id/subj_4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="subject 4"
                android:textColor="@color/black" />

            <RadioButton
                android:fontFamily="@font/poppins"
                android:id="@+id/subj_5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="subject 5"
                android:textColor="@color/black" />
        </RadioGroup>
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:fontFamily="@font/poppins"
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@color/selected"
        android:padding="5dp"
        android:text="Upload" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/manage"
        android:layout_width="match_parent"
        android:fontFamily="@font/poppins"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@color/selected"
        android:padding="5dp"
        android:text="Manage" />

</LinearLayout>