<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    
    android:background="@color/anti_flash_white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <LinearLayout
        android:padding="10dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <TextView
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:text="Dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:id="@+id/books"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/aero"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:textStyle="bold"
            android:text="@string/books"
            android:textSize="36sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView

            android:layout_margin="20dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/book"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:elevation="10dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/mindaro"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:textStyle="bold"
            android:text="@string/pyq"
            android:textSize="36sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView

            android:layout_margin="20dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/exam"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:elevation="10dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/dogwood"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:textStyle="bold"
            android:text="Placement Assistant"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView

            android:layout_margin="20dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/coding"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>